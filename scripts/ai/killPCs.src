function CloseDistance( opponent )

var sleepdelay := 200 - (CInt(GetDexterity(me)) * 1.5);

	if (sleepdelay < 0)
		sleepdelay := 0;
	endif


    case Distance( me, opponent )
        1:              // the most likely, so first
        0:
            return 1;
        default:
            RunToward( opponent );
		sleepms(sleepdelay);
            return 0;
    endcase

endfunction
