use uo;
use cfgfile;


program pvp(who, text)

if(!text)
SendSysMessage( who, "Use .desbugarpvp 1 ou 2",3,95 );
return;
endif

if(text == "1")
EraseGlobalProperty("arenaIemuso");
SendSysMessage( who, "Pedra I Desbugada",3,95 );
return;
endif

if(text == "2")
EraseGlobalProperty("arenaIIemuso");
SendSysMessage( who, "Pedra II Desbugada",3,95 );
return;
endif

SendSysMessage( who, "Use .desbugarpvp 1 ou 2",3,95 );

endprogram