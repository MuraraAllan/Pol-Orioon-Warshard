include "include/attributes";
program textcmd_refreshme( who )
sendsysmessage(who,"Voce se sente aliviado",0x9,90);
    SetHp(who, GetMaxHp(who));
    SetMana(who, GetMaxMana(who));
    SetStamina(who, GetMaxStamina(who));
endprogram